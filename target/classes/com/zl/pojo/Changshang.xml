<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
		"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zl.dao.IChangshangDao" >
	<!-- 根据Id级联 -->
	<select id="findChangshangById" resultType="com.zl.pojo.Changshang" parameterType="java.lang.Integer">
		select changshangid,changshangname from changshang where changshangid=#{changshangid} 
	</select>
	<!-- 查询所有厂商 -->
	<select id="findAllChangshang" resultType="com.zl.pojo.Changshang">
		select * from changshang
	</select>
</mapper>